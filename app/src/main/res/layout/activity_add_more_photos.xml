<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMorePhotosActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add more photos of your Dog"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:id="@+id/add_header"
        android:layout_marginTop="40dp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add_dog_et_bg"
        android:layout_below="@id/add_header"
        android:layout_marginTop="50dp"
        android:id="@+id/add_more_image">

    </ImageView>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_more_image"
        android:layout_marginTop="20dp"
        android:text="Add photo"
        android:id="@+id/add_more_button">

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:text="Upload photo"
        android:id="@+id/add_more_upload_button">

    </Button>

</RelativeLayout>