<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:background="@color/colorPrimaryDark">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/ChangePassToolbar"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changepass"
        android:textColor="@color/white"
        android:id="@+id/head_text"
        android:layout_below="@id/ChangePassToolbar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/regular"
        android:textSize="17sp">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/new_pass_et"
        android:layout_below="@id/head_text"
        android:layout_marginTop="20dp"
        android:background="@drawable/add_dog_et_bg"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:drawableStart="@drawable/new_pass_icon"
        android:drawableLeft="@drawable/new_pass_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/regular"
        android:hint="@string/newpassword"
        android:inputType="textCapWords"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/silver">

    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/confirm_new_pass_et"
        android:layout_below="@id/new_pass_et"
        android:layout_marginTop="20dp"
        android:background="@drawable/add_dog_et_bg"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:drawableStart="@drawable/confirm_pass_icon"
        android:drawableLeft="@drawable/confirm_pass_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/regular"
        android:hint="@string/confirmnewpassword"
        android:inputType="textCapWords"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/silver">

    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/cnf"
        android:id="@+id/confirm_button"
        android:layout_below="@id/confirm_new_pass_et"
        android:layout_marginTop="20dp">

    </Button>

</RelativeLayout>