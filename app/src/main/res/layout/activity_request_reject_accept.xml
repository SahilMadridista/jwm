<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dogdescriptionbg"
    tools:context=".RequestRejectAccept">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/desc_dog_image_req"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_dog"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp">

        </de.hdodenhof.circleimageview.CircleImageView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dognamehaed"
                        android:textColor="@color/gray"
                        android:layout_centerHorizontal="true">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Dog"
                        android:id="@+id/detail_dog_req"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_centerInParent="true"
                        android:textSize="15sp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dogagehead"
                        android:textColor="@color/gray"
                        android:layout_centerHorizontal="true">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age of Dog"
                        android:textColor="@color/black"
                        android:id="@+id/detail_age_req"
                        android:layout_centerInParent="true"
                        android:textSize="15sp">

                    </TextView>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/desc_text_bg"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dogbreedhead"
                        android:textColor="@color/gray"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breed of Dog"
                        android:textColor="@color/black"
                        android:id="@+id/detail_breed_req"
                        android:layout_centerInParent="true"
                        android:textSize="15sp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/desc_text_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doggenderhead"
                        android:textColor="@color/gray"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender of Dog"
                        android:id="@+id/detail_gender_req"
                        android:textColor="@color/black"
                        android:layout_centerInParent="true"
                        android:textSize="15sp">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/desc_text_bg"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ownernamehead"
                        android:textColor="@color/gray"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner of Dog"
                        android:textColor="@color/black"
                        android:id="@+id/detail_owner_req"
                        android:layout_centerInParent="true"
                        android:textSize="15sp">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"
                    android:id="@+id/relative_city"
                    android:background="@drawable/desc_text_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ownercityhead"
                        android:textColor="@color/gray"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City of owner"
                        android:textColor="@color/black"
                        android:id="@+id/detail_city_req"
                        android:layout_centerInParent="true"
                        android:textSize="15sp">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:id="@+id/reject_req"
                android:text="Reject"
                android:textSize="18sp"
                android:background="@color/red">
            </Button>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/white">

            </View>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/see_all_photos_request"
                android:textColor="@color/white"
                android:text="See photos"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_above="@id/linearLayout"
                android:background="@color/colorPrimaryDark">

            </Button>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/white">

            </View>

            <Button

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:id="@+id/accept_req"
                android:textAllCaps="false"
                android:text="Accept"
                android:textSize="18sp"
                android:background="@color/green">

            </Button>

        </LinearLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>