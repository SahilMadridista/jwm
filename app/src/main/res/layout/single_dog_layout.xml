<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/card_bg">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_layout"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardview_dog_image"
            android:scaleType="centerCrop"
            android:src="@drawable/default_dog"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryDark">

        </de.hdodenhof.circleimageview.CircleImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/image_layout"
        android:layout_toEndOf="@id/image_layout"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/name_head"
                android:layout_marginTop="15dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dog_name_text"
                android:fontFamily="@font/bold"
                android:textAlignment="center">

            </TextView>

        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/desc_text_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/breed_head"
                android:layout_marginTop="15dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:id="@+id/dog_breed_text"
                android:fontFamily="@font/bold"
                android:textAlignment="center">

            </TextView>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/gender_head"
                android:layout_marginTop="15dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:id="@+id/dog_gender_text"
                android:fontFamily="@font/bold"
                android:textAlignment="center">

            </TextView>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>


