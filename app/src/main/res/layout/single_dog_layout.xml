<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/card_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/image_layout"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:id="@+id/cardview_dog_image"
                android:scaleType="centerCrop">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_layout"
            android:layout_toEndOf="@id/image_layout"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dog_name_text"
                android:fontFamily="@font/regular"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/dog_name_text"
                android:textSize="17sp"
                android:id="@+id/dog_breed_text"
                android:fontFamily="@font/regular"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/dog_breed_text"
                android:textSize="17sp"
                android:id="@+id/dog_gender_text"
                android:fontFamily="@font/regular"
                android:textAlignment="center">

            </TextView>



        </RelativeLayout>





    </RelativeLayout>



</RelativeLayout>